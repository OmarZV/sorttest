<p id="notice"><%= notice %></p>
<div class="row">
<div class="col-md-3">
<% if current_user %>
<%= image_tag current_user.avatar, width: 70, class: "css-style"  %>
<br>
<strong><%= current_user.username %></strong>
<% else %>
<%= link_to 'Login/SignUp', new_user_session_path %>
<% end %>
</div>
<div class="col-md-7">
<div class="row">
<div class="col-md-3"><h1 class="page-header">Listing Items</h1></div><br><br><div class="col-md-9"><%= link_to 'New Item', new_item_path, class: "btn btn-default" %></div>
</div>
<% @items.each do |item| %>
	<div class="row">
	<div class="col-md-2"><%= image_tag item.user.avatar, width: 38, class: "css-style" %>&nbsp<strong><%= item.user.username %></strong></div>
	<div class="col-md-2" style="font-size:14px;"></div>
	<div class="col-md-8"></div>
	</div>
	<div class="row">
	<div class="col-md-2" style="font-size:22px; font-family:circular,-apple-system,BlinkMacSystemFont,Roboto,Helvetica Neue,sans-serif !important;"><%= link_to item.product, item %></div>
	<div class="col-md-2" style="font-size:22px; font-family:circular,-apple-system,BlinkMacSystemFont,Roboto,Helvetica Neue,sans-serif !important;">$<%= item.amount %></div>		
	<div class="col-md-8"></div>	
	</div>
	<div><%= image_tag(item.avatar.url(:medium)) %></div>
	<div class="row">
  <div class="col-md-2"><%= item.commits_count %><%= render partial: "commits", locals: {item: item} %></div>
  <div class="col-md-2"><%= item.likes_count %><%= render partial: "likes", locals: {item: item} %></div>  
	<div class="col-md-8"></div>
</div>

	
	<hr />
	<% end %>
	</div>
	<div class="col-md-2">
Egypt
</div>
</div>