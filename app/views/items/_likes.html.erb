<% if user_signed_in? && current_user.likes?(item) %>
	<%= link_to "Unlike", item_like_path(item), method: :delete, remote: true%>
<% else %>
	<%= link_to "Like", item_like_path(item), method: :post, remote: true%>
	<% end %>
	
<% item.likes.each do |like| %>
	<%= image_tag like.user.avatar, width: 20%>
<% end %>