<% if user_signed_in? && current_user.favorites?(item) %>
	<%= link_to '<i class="fa fa-thumbs-o-up fa-lg" aria-hidden="true" ></i>'.html_safe, item_favorite_path(item), method: :delete, remote: true%>
<% else %>
	<%= link_to '<i class="fa fa-thumbs-o-up fa-lg" aria-hidden="true"></i>'.html_safe, item_favorite_path(item), method: :post, remote: true%>
	<% end %>
	
<% item.favorites.each do |favorite| %>
	<%= image_tag favorite.user.avatar, width: 20%>
<% end %>